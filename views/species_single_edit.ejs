<!DOCTYPE html>
<html>
  <%- include ('partial/head') %>
  <body>
    <%- include ('partial/navbar') %>
    <div class="container mt-4">
      <h1>Edit Species</h1>
      <hr class='my-4'>
      <form action="/species/<%= speciesData.id %>/edit?_method=PUT" method="POST">
        <div class="form-group row">
          <label for="name" class="col-form-label col-sm-3"><b>Name</b></label>
          <input type="text" class="form-control col-sm-9" id="name" name="name" value='<%= speciesData.name%>'>
        </div>
        <div class="form-group row">
          <label for="scientific_name" class="col-form-label col-sm-3"><b>Scientific Name</b></label>
          <input type="text" class="form-control col-sm-9" id="scientific_name" name="scientific_name" value='<%= speciesData.scientific_name%>'>
        </div>
        <div class="form-group row justify-content-end">
          <div class="col-sm-9 pl-0">
            <button type="submit" class="btn btn-primary">Submit</button>
            <a href="/species/<%= speciesData.id %>" class=' ml-2 btn btn-danger'>Cancel</a>
          </div>  
          
        </div>
      </form>

    </div>

    <%- include ('partial/requiredjs') %>
  </body>
</html>