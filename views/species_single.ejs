<!DOCTYPE html>
<html>
  <%- include ('partial/head') %>
  <body>
    <%- include ('partial/navbar') %>
    <div class="container mt-4">
      <div class='row'>
        <div class="col">
          <form action="/species/all" METHOD="GET">
            <button class="btn btn-outline-secondary">Back to all species</button>
          </form>
        </div>
      </div>
      <h1>Species Information</h1>
      <hr class='my-4'>
      <form action="/species/<%=speciesData.id%>/edit" method="GET">
        <div class="form-group row">
          <label for="name" class="col-form-label col-sm-3"><b>Name</b></label>
          <input type="text" readonly class="form-control-plaintext col-sm-9" id="name" value='<%= speciesData.name%>'>
        </div>
        <div class="form-group row">
          <label for="scientific_name" class="col-form-label col-sm-3"><b>Scientific Name</b></label>
          <input type="text" readonly class="form-control-plaintext col-sm-9" id="scientific_name" value='<%= speciesData.scientific_name%>'>
        </div>
        <div class="form-group row justify-content-end">
          <div class="col-sm-9 pl-0">
            <button type="submit" class="btn btn-primary">Edit</button>
            <button type = 'submit' formaction="/species/<%= speciesData.id %>/delete?_method=DELETE" formmethod = "POST" class='btn btn-danger'>Delete</button>
          </div>
        </div>
        
      </form>

    </div>

    <%- include ('partial/requiredjs') %>
  </body>
</html>