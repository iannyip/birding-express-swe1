<!DOCTYPE html>
<html>
  <%- include ('partial/head') %>
  <body>
    <%- include ('partial/navlogin') %>
    <div class="container mt-4">
      <div class="row justify-content-center">
        <div class="col-6">
          <h1>Login</h1>
          <hr class="my-4"> 
        </div>
      </div>
      <div class="row justify-content-center">
        <div class="col-6">
          <form action="/login" method = "POST">
            <div class="form-group row">
              <label for="email" class="col-form-label col-sm-3">Email</label>
              <input type="text" name="email" id="email" placeholder="Your email address" class="form-control col-sm-9">
            </div>
            <div class="form-group row">
              <label for="password" class="col-form-label col-sm-3">Password</label>
              <input type="text" name="password" id="password" class="form-control col-sm-9">
            </div>
            <div class="form-group row justify-content-end">
              <div class="col-sm-9 pl-0">
                <button type="submit" class="btn btn-primary">Sign in</button>
                <a class="btn btn-primary" href="/signup">Sign up</a>
              </div>
            </div>
            
            
          </form>
        </div>
      </div>
      
      
    </div>

    <%- include ('partial/requiredjs') %> 
  </body>
</html>