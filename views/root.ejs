<!DOCTYPE html>
<html>
  <%- include('partial/head') %>
  <body>
    <%- include ("partial/navbar") %>

    <!-- Insert code here -->
    <div class="container mt-3">
      <h1> Bird Sightings</h1>
      <hr class='my-4'>
      <form action="/note">
        <button type="submit" class="btn btn-primary mb-4">Add New Note</button>
      </form>
      <table class="table text-center">
        <thead>
          <tr>
            <th scope="col">id</th>
            <th scope="col">Date</th>
            <th scope="col">Time</th>
            <th scope="col">Behaviour</th>
            <th scope="col">Species</th>
            <th scope="col">Flock Size</th>
            <th scope="col">User</th>
            <th scope="col">Link</th>
            <th scope="col">Delete</th>
          </tr>
        </thead>
        <tbody>
          <% rootTableData.forEach(noteObj =>{ %>
            <tr>
              <th scope="row"><%= noteObj.id %></th>
              <th><%= noteObj.date %></th>
              <th><%= noteObj.time %></th>
              <th><%= noteObj.behaviour %></th>
              <th><%= noteObj.species %></th>
              <th class=""><%= noteObj.flock_size %></th>
              <th class=""><%= noteObj.email %></th>
              <th class=""><a href="/note/<%= noteObj.id %>">
                <i class="bi bi-box-arrow-up-right"></i>
              </a></th>
              <th class="">
                <form action="/note/<%= noteObj.id %>/delete?_method=DELETE" method="POST" class="align-text-top">
                  <button type="submit" class='btn py-0'> <i class="bi bi-trash" style="color: cornflowerblue"></i> </button>
              </form>
              </th>
            </tr>
          <% }) %>
        </tbody>

      </table>

    </div>
    <%- include ("partial/requiredjs") %>
  </body>
</html>